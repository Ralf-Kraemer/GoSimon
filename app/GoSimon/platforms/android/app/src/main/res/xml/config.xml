<?xml version='1.0' encoding='utf-8'?>
<widget id="eu.ralfkraemer.gosimon" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="DecryptResource">
        <param name="android-package" value="com.crypt.cordova.DecryptResource" />
        <param name="onload" value="true" />
    </feature>
    <name>GoSimon</name>
    <description>
        One of the best chat applications there are. GoSiomon uses AI to connect you with like-minded people nearby.
    </description>
    <author email="hello@ralfkraemer.eu" href="https://ralfkraemer.eu">
        Ralf Kr√§mer
    </author>
    <content src="http://localhost:8080/index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
